{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__stories__/*",
    "**/__test__/*"
  ],
  "compilerOptions": {
    "types": [
      "vite/client"
    ],
    "isolatedModules": true,
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "Node",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@": [
        "./"
      ],
      "*": [
        "src/*",
        "node_modules/*"
      ],
      "tslib": [
        "./node_modules/tslib/tslib.d.ts"
      ]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
