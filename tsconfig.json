{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2022"
    },
    "exclude": [
        "test.tsx",
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}